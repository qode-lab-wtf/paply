{
  "name": "paply-menubar",
  "version": "1.3.2",
  "description": "Menüleisten-App für Sprachtranskription mit Groq Whisper und optional Claude Haiku Polishing",
  "main": "electron-main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --mac --arm64 --publish never",
    "build:universal": "electron-builder --mac --universal --publish never",
    "build:win": "electron-builder --win --x64 --publish never",
    "build:win:ia32": "electron-builder --win --ia32 --publish never",
    "build:all": "electron-builder --mac --win --publish never",
    "build:publish": "electron-builder --mac --win --publish always",
    "generate:ico": "node scripts/generate-ico.js",
    "start": "electron .",
    "lint": "echo \"no lint configured\""
  },
  "keywords": [
    "transcription",
    "whisper",
    "groq",
    "menubar",
    "macos",
    "windows"
  ],
  "author": "paply",
  "license": "MIT",
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.3.9",
    "form-data": "^4.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "electron": "^33.4.11",
    "electron-builder": "^24.13.3",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.paply.menubar",
    "productName": "paply",
    "publish": {
      "provider": "github",
      "owner": "allanhamduws-alt",
      "repo": "paply"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "afterSign": "scripts/notarize.js",
    "win": {
      "icon": "icon.ico",
      "publisherName": "paply",
      "signDlls": true,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "differentialPackage": true
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "dashboard.html",
      "settings.html",
      "history.html",
      "recording.html",
      "icon.png",
      "icon.ico",
      "iconTemplate.png",
      "iconTemplate@2x.png"
    ],
    "extraResources": []
  }
}
